{% extends "base.html.twig" %}

{% block body %}
	{% if error %}
		<p class="alert alert-danger">{{error.messageKey}}</p>
	{% endif %}

	<form method="POST" class="container">
		<label for="username">Nom d'utilisateur</label>
		<input type="text" name="_username" id="username" class="form-control" placeholder="Votre nom d'utilisateur" required/>
		
		<label for="password">Mot de passe</label>
		<input type="password" name="_password" id="password" class="form-control" placeholder="Votre mot de passe" required/>
		
		<button type="submit" class="btn btn-primary mt-3">Se connecter</button>
	</form>
{% endblock %}
