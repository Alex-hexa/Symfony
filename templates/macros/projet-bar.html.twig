{% macro ProjectBar(projet, read) %} {# Macros pour l'affichage des projets #}
	<div class="card mt-3 p-2 w-auto" style="background-color: {{projet.colorBackCard}};">
		<div class="row g-0">
			<div class="col-md-4  m-auto">
				<img src={{projet.image}} class="rounded w-75" alt="...">
			</div>
			<div class="col-md-8 m-auto">
				<div class="card-body rounded" style="background-color:  #FFFFFF">
					<h3 class="card-title">{{projet.title}}</h3>
					<p class="card-text">{{projet.description}}</p>
					{% for tag in projet.tags %}
						<p>- {{tag}}</p>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

	<div>
		{% if is_granted('ROLE_ADMIN') %}
			{% if read %}
				<a href="/read/project/{{projet.id}}" class="btn btn-primary" title="Lire">
				{# le fait qu'il soit vide rend le bouton design #}
				</a>
			{% endif %}
			<a href="/update/project/{{projet.id}}" class="btn btn-warning" title="Modifier">
			</a>
			<a href="/delete/project/{{projet.id}}" class="btn btn-danger" title="Supprimer">
			</a>
		{% endif %}
	</div>
{% endmacro %}
