{% extends "base.html.twig" %} {# formulaire pour les tags #}

{% block title %}
	{{parent()}}
	{% if type == "create" %}
		Créer un tag
	{% else %}
		Modifier le tag
		{{ tag.title }}
	{% endif %}
{% endblock %}

{% block body %}
	<div class="mt-5">
		<h1 class="m-5 pt-5 d-flex justify-content-center">
			{% if type == "create" %}
				Créer un tag
			{% else %}
				Modifier le tag '
				{{ tag.title }}
				'
			{% endif %}
		</h1>
		{{form_start(form)}}
		{{form_rest(form)}}

		{% if type == "create" %}
			<input type="submit" value="Créer" class="btn btn-success mt-2">
		{% else %}
			<input type="submit" value="Modifier" class="btn btn-warning mt-2">
		{% endif %}

		{{form_end(form)}}
	</div>
{% endblock %}
