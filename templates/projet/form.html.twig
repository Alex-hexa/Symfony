{% extends "base.html.twig" %}

{% block title %}
	{{parent()}}
	{% if type == "create" %}
		Créer un projet
	{% else %}
		Modifier le projet
		{{ project.title }}
	{% endif %}
{% endblock %}

{% block body %}
	<h1>
		{% if type == "create" %}
			Créer un projet
		{% else %}
			Modifier le projet
			{{ project.title }}
		{% endif %}
	</h1>
	{{form_start(form)}}
	{{form_rest(form)}}
	{% if type == "create" %}
		<input type="submit" value="Créer" class="btn btn-success">
	{% else %}
		<input type="submit" value="Modifier" class="btn btn-warning">
	{% endif %}
	{{form_end(form)}}
{% endblock %}
